<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.flowershop.dao.TGouwucheDao">

    <resultMap id="BaseResultMap" type="com.flowershop.entity.TGouwuche">
        <!--@Table t_gouwuche-->
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="userid" column="userid" jdbcType="INTEGER"/>
        <result property="pid" column="pid" jdbcType="INTEGER"/>
        <result property="shuliang" column="shuliang" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select id,
               userid,
               pid,
               shuliang

        from t_gouwuche
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
        id,userid,pid,shuliang

        from t_gouwuche
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="userid != null">
                and userid = #{userid}
            </if>
            <if test="pid != null">
                and pid = #{pid}
            </if>
            <if test="shuliang != null">
                and shuliang = #{shuliang}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
    select
    id,userid,pid,shuliang

    from flower_shop.t_gouwuche
    </select>
    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from t_gouwuche
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="userid != null">
                and userid = #{userid}
            </if>
            <if test="pid != null">
                and pid = #{pid}
            </if>
            <if test="shuliang != null">
                and shuliang = #{shuliang}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into t_gouwuche(userid, pid, shuliang)
        values (#{userid}, #{pid}, #{shuliang})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into t_gouwuche(userid, pid, shuliang)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.userid}, #{entity.pid}, #{entity.shuliang})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into t_gouwuche(userid, pid, shuliang)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.userid}, #{entity.pid}, #{entity.shuliang})
        </foreach>
        on duplicate key update
        userid = values(userid),
        pid = values(pid),
        shuliang = values(shuliang)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update t_gouwuche
        <set>
            <if test="userid != null">
                userid = #{userid},
            </if>
            <if test="pid != null">
                pid = #{pid},
            </if>
            <if test="shuliang != null">
                shuliang = #{shuliang},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from t_gouwuche
        where id = #{id}
    </delete>

</mapper>

