<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.flowershop.dao.TGonggaoDao">

    <resultMap id="BaseResultMap" type="com.flowershop.entity.TGonggao">
        <!--@Table t_gonggao-->
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="biaoti" column="biaoti" jdbcType="VARCHAR"/>
        <result property="neirong" column="neirong" jdbcType="VARCHAR"/>
        <result property="shijian" column="shijian" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select id,
               biaoti,
               neirong,
               shijian

        from t_gonggao
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
        id,biaoti,neirong,shijian

        from t_gonggao
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="biaoti != null and biaoti != ''">
                and biaoti = #{biaoti}
            </if>
            <if test="neirong != null and neirong != ''">
                and neirong = #{neirong}
            </if>
            <if test="shijian != null and shijian != ''">
                and shijian = #{shijian}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
    select
    id,biaoti,neirong,shijian

    from flower_shop.t_gonggao
    </select>
    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from t_gonggao
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="biaoti != null and biaoti != ''">
                and biaoti = #{biaoti}
            </if>
            <if test="neirong != null and neirong != ''">
                and neirong = #{neirong}
            </if>
            <if test="shijian != null and shijian != ''">
                and shijian = #{shijian}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into t_gonggao(biaoti, neirong, shijian)
        values (#{biaoti}, #{neirong}, #{shijian})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into t_gonggao(biaoti, neirong, shijian)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.biaoti}, #{entity.neirong}, #{entity.shijian})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into t_gonggao(biaoti, neirong, shijian)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.biaoti}, #{entity.neirong}, #{entity.shijian})
        </foreach>
        on duplicate key update
        biaoti = values(biaoti),
        neirong = values(neirong),
        shijian = values(shijian)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update t_gonggao
        <set>
            <if test="biaoti != null and biaoti != ''">
                biaoti = #{biaoti},
            </if>
            <if test="neirong != null and neirong != ''">
                neirong = #{neirong},
            </if>
            <if test="shijian != null and shijian != ''">
                shijian = #{shijian},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from t_gonggao
        where id = #{id}
    </delete>

</mapper>

