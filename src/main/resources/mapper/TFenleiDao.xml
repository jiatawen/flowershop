<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.flowershop.dao.TFenleiDao">

    <resultMap id="BaseResultMap" type="com.flowershop.entity.TFenlei">
        <!--@Table t_fenlei-->
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="fname" column="fname" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select id,
               fname

        from t_fenlei
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
        id,fname

        from t_fenlei
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="fname != null and fname != ''">
                and fname = #{fname}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
    select
    id,fname

    from flower_shop.t_fenlei
    </select>
    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from t_fenlei
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="fname != null and fname != ''">
                and fname = #{fname}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into t_fenlei(fname)
        values (#{fname})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into t_fenlei(fname)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.fname})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into t_fenlei(fname)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.fname})
        </foreach>
        on duplicate key update
        fname = values(fname)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update t_fenlei
        <set>
            <if test="fname != null and fname != ''">
                fname = #{fname},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from t_fenlei
        where id = #{id}
    </delete>

</mapper>

