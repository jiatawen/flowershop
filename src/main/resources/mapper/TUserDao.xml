<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.flowershop.dao.TUserDao">

    <resultMap id="BaseResultMap" type="com.flowershop.entity.TUser">
        <!--@Table t_user-->
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="username" column="username" jdbcType="VARCHAR"/>
        <result property="password" column="password" jdbcType="VARCHAR"/>
        <result property="xingming" column="xingming" jdbcType="VARCHAR"/>
        <result property="role" column="role" jdbcType="INTEGER"/>
        <result property="dianhua" column="dianhua" jdbcType="VARCHAR"/>
        <result property="dizhi" column="dizhi" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select id,
               username,
               password,
               xingming,
               role,
               dianhua,
               dizhi

        from t_user
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
        id,username,password,xingming,role,dianhua,dizhi

        from t_user
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="username != null and username != ''">
                and username = #{username}
            </if>
            <if test="password != null and password != ''">
                and password = #{password}
            </if>
            <if test="xingming != null and xingming != ''">
                and xingming = #{xingming}
            </if>
            <if test="role != null">
                and role = #{role}
            </if>
            <if test="dianhua != null and dianhua != ''">
                and dianhua = #{dianhua}
            </if>
            <if test="dizhi != null and dizhi != ''">
                and dizhi = #{dizhi}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
    select
    id,username,password,xingming,role,dianhua,dizhi

    from flower_shop.t_user
    </select>
    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from t_user
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="username != null and username != ''">
                and username = #{username}
            </if>
            <if test="password != null and password != ''">
                and password = #{password}
            </if>
            <if test="xingming != null and xingming != ''">
                and xingming = #{xingming}
            </if>
            <if test="role != null">
                and role = #{role}
            </if>
            <if test="dianhua != null and dianhua != ''">
                and dianhua = #{dianhua}
            </if>
            <if test="dizhi != null and dizhi != ''">
                and dizhi = #{dizhi}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into t_user(username, password, xingming, role, dianhua, dizhi)
        values (#{username}, #{password}, #{xingming}, #{role}, #{dianhua}, #{dizhi})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into t_user(username, password, xingming, role, dianhua, dizhi)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.username}, #{entity.password}, #{entity.xingming}, #{entity.role}, #{entity.dianhua},
            #{entity.dizhi})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into t_user(username, password, xingming, role, dianhua, dizhi)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.username}, #{entity.password}, #{entity.xingming}, #{entity.role}, #{entity.dianhua},
            #{entity.dizhi})
        </foreach>
        on duplicate key update
        username = values(username),
        password = values(password),
        xingming = values(xingming),
        role = values(role),
        dianhua = values(dianhua),
        dizhi = values(dizhi)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update t_user
        <set>
            <if test="username != null and username != ''">
                username = #{username},
            </if>
            <if test="password != null and password != ''">
                password = #{password},
            </if>
            <if test="xingming != null and xingming != ''">
                xingming = #{xingming},
            </if>
            <if test="role != null">
                role = #{role},
            </if>
            <if test="dianhua != null and dianhua != ''">
                dianhua = #{dianhua},
            </if>
            <if test="dizhi != null and dizhi != ''">
                dizhi = #{dizhi},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from t_user
        where id = #{id}
    </delete>

</mapper>

